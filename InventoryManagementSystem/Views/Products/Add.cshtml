@model InventoryManagementSystem.Models.AddProductViewModel

<h1>
    Add Product
</h1>

<form method="post">
    <div class=" mt-3">
        <label class="form-label mt-3">Product</label>
        <input type="text" class="form-control" placeholder="Enter Product Name" asp-for="ProductName"/>
    </div>

    <div class=" mt-3">
        <label class="form-label mt-3">Description</label>
        <input type="text" class="form-control" placeholder="Enter Product Name" asp-for="Description" />
    </div>

    <div class=" mt-3">
        <label class="form-label mt-3">Location</label>
        @* <input list="locations" class="form-control" placeholder="Choose a location " asp-for="Location"/>
        <datalist id="locations">
            <option value="Warehouse A" selected></option>
            <option value="Warehouse B"></option>
