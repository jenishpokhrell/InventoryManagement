        </datalist> *@
        <input type="type" class="form-control" placeholder="Enter location"/>
    </div>

    <div class=" mt-3">
        <label class="form-label mt-3">Quantity</label>
        <input type="text" class="form-control" placeholder="Enter Quantity" asp-for="Quantity" />
    </div>

    <div class=" mt-3">
        <label class="form-label mt-3">Price (per qty)</label>
        <input type="text" class="form-control" placeholder="Enter Price (Per Qty)" asp-for="Price"/>
    </div>

    <div class=" mt-3">
        <button type="submit" class="btn btn-primary mt-4 px-5 py-2">Add</button>
    </div>
    
</form>